<%= form_for @key_pair, :html => { :class => "form-horizontal container" } do |f| %>

  <% if @key_pair.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@key_pair.errors.count, "error") %> prohibited this key-pair from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @key_pair.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :public_key, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :public_key, :class => 'form-control', placeholder: 'If left empty will be autogenerated.' %>
    </div>
    <%=f.error_span(:public_key) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                key_pairs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
